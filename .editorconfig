[*.{js,jsx,mjs,cjs,ts,tsx,mts,cts,vue}]
charset = utf-8
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

end_of_line = lf
max_line_length = 100

[{*.ats,*.cts,*.mts,*.ts,*.tsx}]
ij_typescript_spaces_within_imports = true
ij_typescript_use_double_quotes = false
ij_formatter_enabled = true
